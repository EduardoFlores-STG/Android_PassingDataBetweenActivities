<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eduardoflores.com.test_passingdatabetweenactivities.SecondActivity">

    <TextView
        android:id="@+id/title_second_activity"
        android:text="Second Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_name_second"
        android:text="NAME:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_second_activity"
        android:paddingTop="30dp"
        />

    <TextView
        android:id="@+id/tv_number_second"
        android:text="Enter a number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_second"
        android:paddingTop="30dp"
        />

    <EditText
        android:id="@+id/et_number_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_number_second"
        android:layout_toRightOf="@id/tv_number_second"
        android:inputType="number"
        />

    <Button
        android:id="@+id/button_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send number back to first activity!"
        android:layout_below="@id/tv_number_second"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
