<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eduardoflores.com.test_passingdatabetweenactivities.FirstActivity">

    <TextView
        android:id="@+id/title_first_activity"
        android:text="First Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_name"
        android:text="Enter your name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_first_activity"
        android:paddingTop="30dp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        />


    <TextView
        android:id="@+id/tv_number"
        android:text="NUMBER:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:paddingTop="30dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/button_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send name to second activity!"
        android:layout_below="@id/tv_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
